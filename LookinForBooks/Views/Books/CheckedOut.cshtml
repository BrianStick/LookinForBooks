@model LookinForBooks.Models.CheckedOutVM

@{
    ViewBag.Title = "Checkedout";
}

<h2>@Model.Title</h2>

@if (!string.IsNullOrWhiteSpace(Model.OwnerId))
{
    <h4>Owned By <a href="@Url.Action("Profile", new {Id = Model.OwnerId})">@Model.OwnerName</a></h4>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.BookId)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Check this Book Out" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
